{
  "name": "node-ts-base",
  "version": "0.1.0",
  "description": "Base TS Node project",
  "main": "index.js",
  "engines": {
    "node": "^16.14.2",
    "npm": "^8.5.0"
  },
  "scripts": {
    "dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "tdd": "jest --watch",
    "test": "jest --passWithNoTests",
    "ts-compile": "tsc --noEmit",
    "lint": "eslint ./src --ext .ts",
    "coverage": "jest --passWithNoTests --coverage",
    "build": "tsc",
    "start": "node build/index.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdelaorden/node-ts.git"
  },
  "keywords": [
    "node",
    "typescript",
    "boilerplate"
  ],
  "author": "Carlos de la Orden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdelaorden/node-ts/issues"
  },
  "homepage": "https://github.com/cdelaorden/node-ts#readme",
  "devDependencies": {
    "@tsconfig/node16-strictest": "^1.0.4",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "esbuild": "^0.14.54",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.11.0",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "winston": "^3.6.0"
  }
}
