{
  "name": "node-ts-base",
  "version": "0.1.0",
  "description": "Base TS Node project",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "tdd": "jest --watch",
    "test": "jest --passWithNoTests",
    "ts-compile": "tsc --noEmit",
    "lint": "eslint ./src --ext .ts",
    "coverage": "jest --passWithNoTests --coverage",
    "build": "tsc",
    "start": "node build/index.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdelaorden/node-ts.git"
  },
  "keywords": [
    "node",
    "typescript",
    "boilerplate"
  ],
  "author": "Carlos de la Orden",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cdelaorden/node-ts/issues"
  },
  "homepage": "https://github.com/cdelaorden/node-ts#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2",
    "husky": "^7.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "winston": "^3.6.0"
  }
}
